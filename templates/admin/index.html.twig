{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <h1>Admin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>NumTel</th>
                <th>Gender</th>
                <th>DateDeNaissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.Prenom }}</td>
                <td>{{ admin.Nom }}</td>
                <td>{{ admin.NumTel }}</td>
                <td>{{ admin.Gender }}</td>
                <td>{{ admin.DateDeNaissance ? admin.DateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_admin_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('app_admin_edit', {'id': admin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_new') }}">Create new</a>
{% endblock %}
