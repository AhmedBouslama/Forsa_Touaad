{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Attribute</th>
                <th>Value</th>
                <th>Prix_Debut_enchere</th>
                <th>Prix_BuyOut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.Name }}</td>
                <td>{{ produit.Brand }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.Etat }}</td>
                <td>{{ produit.Attribute }}</td>
                <td>{{ produit.Value }}</td>
                <td>{{ produit.PrixDebutEnchere }}</td>
                <td>{{ produit.prixBuyOut }}</td>
                <td>
                    <a href="{{ path('app_produit_show', {'id': produit.id}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
